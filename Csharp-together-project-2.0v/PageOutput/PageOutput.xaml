<Page x:Class="Csharp_together_project_2._0v.PageOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Csharp_together_project_2._0v"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageOutput">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0">
            <MenuItem Header="file" FontSize="25" Cursor="Hand">
                <MenuItem Header="Save">
                    <MenuItem.Icon>
                        <Image Source="img/save-icon.png" />
                    </MenuItem.Icon>
                </MenuItem>
                
                <MenuItem Header="Open"></MenuItem>
                
                <MenuItem Header="Save as"></MenuItem>
            </MenuItem>
            <MenuItem Header="edit" FontSize="25" Cursor="Hand"></MenuItem>
            
            <MenuItem Header="info" FontSize="25" Cursor="Hand"></MenuItem>
        </Menu>
    </Grid>
</Page>
